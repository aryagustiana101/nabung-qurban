{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": { "fix": "none", "level": "error" }
      },
      "a11y": { "useValidAnchor": "off", "useFocusableInteractive": "off" },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "error",
          "options": { "functions": ["cn", "cva"], "attributes": ["tw"] }
        }
      },
      "suspicious": { "noArrayIndexKey": "off" }
    }
  },
  "javascript": {
    "jsxRuntime": "reactClassic",
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all",
      "jsxQuoteStyle": "double"
    }
  }
}
